# Ecomovil Microservices Environment Configuration
# Copy this file to .env and modify as needed

# ==============================================
# DATABASE CONFIGURATION
# ==============================================

# IAM Database (PostgreSQL)
IAM_DB_NAME=ecomovil_iam_db
IAM_DB_USER=iam_user
IAM_DB_PASSWORD=iam_password

# Plans Database (MySQL)
PLANS_DB_NAME=ecomovil_plans_db
PLANS_DB_USER=plans_user
PLANS_DB_PASSWORD=plans_password

# Users Database (MySQL)
USERS_DB_NAME=ecomovil_users_db
USERS_DB_USER=users_user
USERS_DB_PASSWORD=users_password

# MySQL Root Password
MYSQL_ROOT_PASSWORD=rootpassword

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================

# Spring Profiles
SPRING_PROFILES_ACTIVE=docker

# JWT Configuration
JWT_SECRET=mySecretKey

# JPA Configuration
SPRING_JPA_SHOW_SQL=false

# ==============================================
# AWS CONFIGURATION (LocalStack)
# ==============================================

AWS_REGION=us-east-1
AWS_SNS_ENDPOINT=http://localstack:4566

# ==============================================
# LOGGING CONFIGURATION
# ==============================================

# Available levels: TRACE, DEBUG, INFO, WARN, ERROR
LOG_LEVEL_IAM=INFO
LOG_LEVEL_PLANS=INFO
LOG_LEVEL_USERS=INFO
LOG_LEVEL_SQL=WARN

# ==============================================
# PERFORMANCE CONFIGURATION
# ==============================================

# Database Connection Pool
DB_POOL_MAX_SIZE=20
DB_POOL_MIN_IDLE=5
DB_CONNECTION_TIMEOUT=20000
DB_IDLE_TIMEOUT=300000

# ==============================================
# DEVELOPMENT CONFIGURATION
# ==============================================

# Set to true for development
DEVELOPMENT_MODE=false

# Show detailed error messages
SHOW_ERROR_DETAILS=true
